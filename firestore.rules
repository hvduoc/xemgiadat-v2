rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // USERS COLLECTION
    // ========================================
    match /users/{userId} {
      // Anyone can read user profiles (for listings contact info)
      allow read: if true;
      
      // Users can create/update only their own profile
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId;
      
      // Users can delete their own profile
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // ========================================
    // LISTINGS COLLECTION
    // ========================================
    match /listings/{listingId} {
      // Anyone can read listings (public data)
      allow read: if true;
      
      // Authenticated users can create listings with their own userId
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status == 'approved'; // Auto-approve for now
      
      // Users can update/delete only their own listings
      allow update, delete: if request.auth != null 
                            && resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // PORTFOLIOS COLLECTION (Legacy from v1)
    // ========================================
    match /portfolios/{portfolioId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null 
                                    && resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // FEEDBACK COLLECTION
    // ========================================
    match /feedback/{feedbackId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
  }
}
